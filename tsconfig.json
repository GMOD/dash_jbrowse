{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "es2022",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["es2022", "DOM", "DOM.Iterable"],
    "module": "esnext",
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitAny": true,
    "jsx": "react",
    "strict": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}
